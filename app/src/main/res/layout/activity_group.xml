<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blank_short">

    <Button
        android:id="@+id/wresting"
        android:layout_width="220dp"
        android:layout_height="146dp"
        android:text="Wrestling"
        android:visibility="invisible"
        app:layout_columnWeight="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/BJJ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_gravity="fill"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/BJJ"
        android:layout_width="223dp"
        android:layout_height="0dp"
        android:text="BJJ"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/allAcceesMMA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_gravity="fill"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/allAcceesMMA"
        android:layout_width="219dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:text="All Access MMA"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/muayThai"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BJJ" />

    <Button
        android:id="@+id/muayThai"
        android:layout_width="219dp"
        android:layout_height="0dp"
        android:layout_marginBottom="41dp"
        android:text="Muay-Thai"
        android:visibility="invisible"
        app:layout_columnWeight="1"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allAcceesMMA"
        app:layout_gravity="fill"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/boxing"
        android:layout_width="0dp"
        android:layout_height="144dp"
        android:text="Boxing"
        android:visibility="invisible"
        app:layout_columnWeight="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/wresting"
        app:layout_constraintEnd_toEndOf="@+id/wresting"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/BJJ"
        app:layout_gravity="fill"
        app:layout_rowWeight="1" />

    <TextView
        android:id="@+id/textView_trainersHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Group Classes"
        android:textColor="#FF0000"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_groupHeader" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="19dp"
        android:text="Your current membership"
        android:textColor="#000000"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/BJJ"
        app:layout_constraintEnd_toStartOf="@+id/membershipText"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_trainersHeader" />

    <TextView
        android:id="@+id/membershipText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/BJJ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView" />

    <Button
        android:id="@+id/button2"
        android:layout_width="224dp"
        android:layout_height="0dp"
        android:layout_marginBottom="262dp"
        android:text="Pick a date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/muayThai" />

    <ImageView
        android:id="@+id/imageView_groupHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/textView_trainersHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_group_large_red" />


</androidx.constraintlayout.widget.ConstraintLayout>